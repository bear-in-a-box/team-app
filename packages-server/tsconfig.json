{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["esnext"],
    "sourceMap": true,
    "removeComments": true,
    // "noEmit": true,
    "noImplicitAny": false,
    "declaration": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "moduleResolution": "node",
    // "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@team-app/*": ["*/src"]
    }
  },
  "exclude": [
    "node_modules",
    "lib",
    "**/*.spec.ts"
  ]
}
